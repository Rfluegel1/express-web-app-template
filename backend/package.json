{
  "name": "express-web-app-template",
  "version": "1.0.0",
  "description": "This project is designed to be a starting point for a express web application",
  "main": "src/server.ts",
  "scripts": {
    "build": "tsc && node replace-migration-pattern.js",
    "test:staging": "NODE_ENV=staging jest blackbox --runInBand --detectOpenHandles",
    "test": "NODE_ENV=development jest --runInBand",
    "dev": "nodemon src/server.ts",
    "start": "node dist/server.js",
    "clean": "rm -rf node_modules && rm -f package-lock.json && npm cache clean --force",
    "migrations:revert": "DB_DATABASE=postgres npx typeorm-ts-node-esm migration:revert -d src/dataSource/dataSourceExport.ts",
    "migrations:create": "if [ -z \\\\\\\"$npm_config_name\\\\\\\" ]; then echo 'Missing --name'; exit 1; else typeorm migration:create src/migrations/$npm_config_name; fi"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cls-hooked": "^4.3.8",
    "@types/connect-pg-simple": "^7.0.3",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.17",
    "@types/express-session": "^1.17.10",
    "@types/morgan": "^1.9.4",
    "@types/node": "^20.11.13",
    "@types/nodemailer": "^6.4.14",
    "@types/passport": "^1.0.16",
    "@types/sanitize-html": "^2.11.0",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/uuid": "^9.0.2",
    "axios": "^1.4.0",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "cls-hooked": "^4.2.2",
    "connect-pg-simple": "^9.0.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-session": "^1.18.0",
    "http-status-codes": "^2.2.0",
    "joi": "^17.12.1",
    "morgan": "^1.10.0",
    "nodemailer": "^6.9.9",
    "nodemon": "^3.0.1",
    "passport": "^0.7.0",
    "passport-local": "^1.0.0",
    "pg": "^8.11.3",
    "sanitize-html": "^2.12.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "ts-node": "^10.9.1",
    "typeorm": "^0.3.17",
    "uuid": "^9.0.0",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.7",
    "@types/tough-cookie": "^4.0.5",
    "axios-cookiejar-support": "^5.0.0",
    "jest": "^29.6.2",
    "jest-editor-support": "^31.1.2",
    "tough-cookie": "^4.1.3",
    "ts-jest": "^29.1.1",
    "typescript": "^5.1.3"
  }
}
