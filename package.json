{
  "name": "typescript-template",
  "version": "1.0.0",
  "description": "This project is designed to be a starting point for a typescript web application",
  "main": "src/backend/server.ts",
  "scripts": {
    "test:github": "NODE_ENV=development jest --runInBand",
    "test:staging": "NODE_ENV=staging jest blackbox --detectOpenHandles",
    "test": "NODE_ENV=development jest --detectOpenHandles --coverage",
    "backend": "nodemon src/backend/server.ts",
    "frontend": "webpack-dev-server --mode development --hot",
    "clean": "rm -rf node_modules && rm -f package-lock.json && npm cache clean --force",
    "fullstack": "npm run backend & npm run frontend",
    "cypress": "npx cypress open",
    "e2e": "ts-node cypress/runCypressHeadless.ts",
    "e2e:staging": "NODE_ENV=staging cypress run --headless --browser chrome",
    "build": "NODE_ENV=development webpack --mode production",
    "build:staging": "NODE_ENV=staging webpack --mode production",
    "migrations:revert": "npx typeorm-ts-node-esm migration:revert -d ./src/backend/postDataSource.ts",
    "migrations:create": "if [ -z \"$npm_config_name\" ]; then echo 'Missing --name'; exit 1; else typeorm migration:create ./src/backend/migrations/$npm_config_name; fi"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/express": "^4.17.17",
    "@types/morgan": "^1.9.4",
    "@types/uuid": "^9.0.2",
    "axios": "^1.4.0",
    "class-transformer": "^0.5.1",
    "cls-hooked": "^4.2.2",
    "dotenv": "^16.3.1",
    "dotenv-webpack": "^8.0.1",
    "express": "^4.18.2",
    "express-openid-connect": "^2.16.0",
    "http-status-codes": "^2.2.0",
    "jest-editor-support": "^31.1.0",
    "morgan": "^1.10.0",
    "nodemon": "^3.0.1",
    "pg": "^8.11.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.15.0",
    "ts-node": "^10.9.1",
    "typeorm": "^0.3.17",
    "uuid": "^9.0.0",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "@babel/core": "^7.22.10",
    "@babel/preset-env": "^7.22.10",
    "@babel/preset-react": "^7.22.5",
    "@babel/preset-typescript": "^7.22.5",
    "@flydotio/dockerfile": "^0.4.8",
    "@testing-library/jest-dom": "^6.0.1",
    "@testing-library/react": "^14.0.0",
    "@types/jest": "^29.5.2",
    "babel-jest": "^29.6.2",
    "babel-loader": "^9.1.3",
    "css-loader": "^6.8.1",
    "cypress": "^12.17.4",
    "cypress-real-events": "^1.10.3",
    "cypress-xpath": "^2.0.1",
    "html-webpack-plugin": "^5.5.3",
    "jest": "^29.6.2",
    "jest-environment-jsdom": "^29.6.2",
    "style-loader": "^3.3.3",
    "ts-jest": "^29.1.1",
    "typescript": "^5.1.3",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  }
}
